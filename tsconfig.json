{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "NodeNext",
    "outDir": "dist/",
    "alwaysStrict": true,
    "diagnostics": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["test/client"]
}
